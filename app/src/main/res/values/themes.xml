<resources>
    <style name="Base.Theme.Launcherbox" parent="Theme.Material3.DayNight.NoActionBar">
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Launcherbox.Launcher" parent="Base.Theme.Launcherbox">
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyMedium</item>

        <item name="selectableItemBackground">@android:attr/selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">@android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Launcherbox.Settings" parent="Base.Theme.Launcherbox">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>

        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="Theme.Launcherbox.OLED" parent="Base.Theme.Launcherbox">
        <item name="android:windowBackground">#000000</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">?android:attr/textColorPrimary</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3B3B3</item>
    </style>

</resources>