<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Launcherbox.FontEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor_caret</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="Base.Theme.Launcherbox" parent="android:Theme.Material.Wallpaper.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Launcherbox.Launcher" parent="Base.Theme.Launcherbox">
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyMedium</item>

        <item name="selectableItemBackground">@android:attr/selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">@android:attr/selectableItemBackgroundBorderless</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="fontEditTextStyle">@style/Theme.Launcherbox.FontEditText</item>
    </style>

    <style name="Theme.Launcherbox.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">

        <item name="android:windowTitleStyle">@style/Theme.Launcherbox.Dialog.Title</item>
        <item name="android:textAppearanceListItem">@style/Theme.Launcherbox.Dialog.Item</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@style/Theme.Launcherbox.Dialog.Animation</item>
        <item name="android:windowClipToOutline">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

        <item name="android:windowIsFloating">true</item>
        <item name="colorSurface">@color/color_background</item>

        <!-- The window title has the primary font colour -->
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textFontWeight">400</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

        <item name="android:minWidth">200dp</item>
    </style>

    <style name="Theme.Launcherbox.Dialog.Title" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="Theme.Launcherbox.Dialog.Item" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textFontWeight">450</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.Launcherbox.Dialog.Animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>

    <!-- I am having issues making this rounded :( -->
    <style name="Theme.Launcherbox.Popup" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="popupMenuStyle">@style/Widget.Launcherbox.PopupMenu</item>
        <item name="android:textAppearanceLarge">@style/Theme.Launcherbox.Dialog.Item</item>
        <item name="android:textAppearanceSmall">@style/Theme.Launcherbox.Dialog.Item</item>
    </style>

    <style name="Widget.Launcherbox.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/dialog_background</item>
        <item name="android:popupAnimationStyle">@style/Theme.Launcherbox.Dialog.Animation</item>
        <item name="android:popupElevation">8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

</resources>